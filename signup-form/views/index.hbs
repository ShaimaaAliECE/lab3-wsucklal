<form action="/insert" method="POST" class="form-signin full-width text-center">

  <h1 class="h3 mb-3 font-weight-normal">Login to Doodlebob</h1>
  <br>
  <label for="email" class="sr-only">Email</label>
  <input type="email" name="email" class="form-control" placeholder="Your email" required>
  <br>
  <label for="name" class="sr-only">First name</label>
  <input type="text" name="password" class="form-control" placeholder="Password" required autofocus>
  <br>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
  <p class="mt-5 mb-3 text-muted">&copy; 2021</p>

</form>
